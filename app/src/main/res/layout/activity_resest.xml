<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.view.Activity.ResestActivity">


    <ImageView
        android:id="@+id/image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/robotomedium"
        android:text="Resest Password"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/editText_confirm_passwrd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_drawble"
        android:elevation="4dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/editText_new_pass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_new_pass"
        app:layout_constraintTop_toBottomOf="@+id/editText_new_pass" />


    <EditText
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/editText_new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_drawble"
        android:elevation="4dp"
        android:hint="New Password"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_reset" />

    <Button
        android:id="@+id/send_pswrd_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/sign_in_button_drawable"
        android:text="Send"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/editText_confirm_passwrd"
        app:layout_constraintStart_toStartOf="@+id/editText_confirm_passwrd"
        app:layout_constraintTop_toBottomOf="@+id/editText_confirm_passwrd" />

</androidx.constraintlayout.widget.ConstraintLayout>