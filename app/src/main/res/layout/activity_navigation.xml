<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".ui.main.view.Activity.Navigation">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/menu"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu"
        android:layout_width="40dp"
        android:layout_height="40dp"/>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/apbackground"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profile"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center|top|start"
            android:gravity="center|start"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_weight=".6"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:fontFamily="@font/robotomedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vikash kumar"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/phone"
                    android:fontFamily="@font/robotoregular"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="EMP ID : LW88789"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="end|center"
                android:layout_weight=".4"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btncamera"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mant"
                    android:layout_marginStart="10dp"     />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:fontFamily="@font/robotomedium"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Operations"
        android:gravity="start"
        android:layout_gravity="start"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/todayld"
            android:orientation="vertical"
            android:elevation="5dp"
            android:layout_marginTop="18dp"
            android:padding="10dp"
            android:background="@color/white"
            android:clickable="true"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:backgroundTint="@color/gray"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </LinearLayout>


                <TextView
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:text="Today Lead's"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center|start"
                    android:textColor="@color/blacklight"
                    android:layout_height="match_parent" />

                <LinearLayout

                    android:layout_width="50dp"
                    android:background="@drawable/round"
                    android:layout_gravity="end"
                    android:layout_height="50dp">
                    <TextView
                        android:fontFamily="@font/robotomedium"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text="21"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_weight=".1"
                    android:layout_width="50dp"
                    android:gravity="center|end"
                    android:layout_gravity="end"
                    android:layout_height="50dp">

                    <ImageView
                        android:background="@drawable/rightarrow"
                        android:backgroundTint="@color/blacklight"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:id="@+id/totaled"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:padding="10dp"
            android:elevation="5dp"
            android:background="@color/white"
            android:clickable="true"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/gray"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </LinearLayout>


                <TextView
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:text="Total Lead's"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center|start"
                    android:textColor="@color/blacklight"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="50dp"
                    android:background="@drawable/round"
                    android:layout_gravity="end"
                    android:layout_height="50dp">
                    <TextView
                        android:fontFamily="@font/robotomedium"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text="121"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_weight=".1"
                    android:layout_width="50dp"
                    android:gravity="center|end"
                    android:layout_gravity="end"
                    android:layout_height="50dp">

                    <ImageView
                        android:background="@drawable/rightarrow"
                        android:backgroundTint="@color/blacklight"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:id="@+id/ircontact"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:padding="10dp"
            android:clickable="true"
            android:elevation="5dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/gray"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </LinearLayout>


                <TextView
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:text="IRA Contact"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center|start"
                    android:textColor="@color/blacklight"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_gravity="end"
                    android:layout_height="50dp">


                </LinearLayout>
                <LinearLayout
                    android:layout_weight=".1"
                    android:layout_width="50dp"
                    android:gravity="center|end"
                    android:layout_gravity="end"
                    android:layout_height="50dp">

                    <ImageView
                        android:background="@drawable/rightarrow"
                        android:backgroundTint="@color/blacklight"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </LinearLayout>



            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:id="@+id/convey_reprt"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:padding="10dp"
            android:elevation="5dp"
            android:clickable="true"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@drawable/contract"
                        android:backgroundTint="@color/apbackground"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </LinearLayout>


                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:text="Conveyance Report"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center|start"
                    android:textColor="@color/blacklight"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_gravity="end"
                    android:layout_height="50dp">


                </LinearLayout>

                <LinearLayout
                    android:layout_weight=".1"
                    android:layout_width="50dp"
                    android:gravity="center|end"
                    android:layout_gravity="end"
                    android:layout_height="50dp">

                    <ImageView
                        android:background="@drawable/rightarrow"
                        android:backgroundTint="@color/blacklight"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:id="@+id/figureprint"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:padding="10dp"
            android:elevation="5dp"
            android:clickable="true"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight=".108"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@drawable/fingerprint"
                        android:backgroundTint="@color/apbackground"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </LinearLayout>


                <TextView
                    android:layout_weight=".8"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:text="Fingerprint "
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center|start"
                    android:textColor="@color/blacklight"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_gravity="end"
                    android:layout_height="50dp">


                </LinearLayout>

                <LinearLayout
                    android:layout_weight=".1"
                    android:layout_width="50dp"
                    android:gravity="center|end"
                    android:layout_gravity="end"
                    android:layout_height="50dp">

                    <ImageView
                        android:background="@drawable/rightarrow"
                        android:backgroundTint="@color/blacklight"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:padding="10dp"
            android:elevation="5dp"
            android:clickable="true"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:backgroundTint="@color/apbackground"
                        android:layout_width="35dp"
                        android:background="@drawable/logout"
                        android:layout_height="35dp" />

                </LinearLayout>


                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:text="Log Out"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center|start"
                    android:textColor="@color/blacklight"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_gravity="end"
                    android:layout_height="50dp">


                </LinearLayout>

                <LinearLayout
                    android:layout_weight=".1"
                    android:layout_width="50dp"
                    android:gravity="center|end"
                    android:layout_gravity="end"
                    android:layout_height="50dp">

                    <ImageView
                        android:background="@drawable/rightarrow"
                        android:backgroundTint="@color/blacklight"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:gravity="center|bottom"

        android:layout_gravity="center|bottom"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/tracker"
            android:layout_width="230dp"
            android:layout_margin="20dp"
            android:layout_height="120dp"
            android:id="@+id/imageView" />


        <TextView
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:text="Version 3.13"
            android:textColor="@color/gray" />


    </RelativeLayout>




    </LinearLayout>

</ScrollView>