<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.view.Activity.LoanDashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/back_layout_lo_det"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:layout_weight=".16"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_left_arrow"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".9"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/name_user"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="40sp"
                                android:fontFamily="@font/robotomedium"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Deepak Kumar"
                                android:textColor="@color/black"
                                android:textSize="22sp" />


                            <TextView
                                android:id="@+id/loan_user"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="40sp"
                                android:fontFamily="@font/robotoregular"
                                android:gravity="center"
                                android:text="LW00322"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>



            <LinearLayout
                android:background="@drawable/round"
                android:layout_width="252dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_height="252dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_us"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:src="@drawable/mant"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>





            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:weightSum="3"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/loanDetail_text"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:background="@drawable/money"
                            android:layout_width="40dp"
                            android:backgroundTint="@color/blacklight"
                            android:layout_height="40dp"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robotomedium"
                            android:text="  Loan \nDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>





                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:id="@+id/currentAdd_text"
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/yellow"
                    android:elevation="5dp"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:background="@drawable/home"
                            android:layout_width="40dp"
                            android:backgroundTint="@color/blacklightlow"
                            android:layout_height="40dp"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robotomedium"
                            android:text="Residence \n Address "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>





                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:id="@+id/officeadd"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:backgroundTint="@color/blacklight"

                            android:background="@drawable/briefcase"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robotomedium"
                            android:text="  Office\nAddress "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>





                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:weightSum="3"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/repayments"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:background="@drawable/purse"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robotomedium"
                            android:text="Repayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>





                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:id="@+id/preefredadd"
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:backgroundTint="@color/blacklightlow"
                            android:background="@drawable/pin"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robotomedium"
                            android:text=" Preferred\n  Address "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>





                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:id="@+id/offeraccept"
                    app:cardCornerRadius="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:backgroundTint="@color/black"
                            android:background="@drawable/contract"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robotomedium"
                            android:text="     Offer\nAcceptance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>





                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:gravity="center|start"
                android:layout_gravity="center|start"
                android:weightSum="3"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:id="@+id/documents"
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:background="@drawable/file"
                            android:layout_width="40dp"
                            android:backgroundTint="@color/blacklight"
                            android:layout_height="40dp"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robotomedium"
                            android:text="Documents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>





                </androidx.cardview.widget.CardView>


                <LinearLayout

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                </LinearLayout>
                <LinearLayout

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>





    </ScrollView>



</LinearLayout>