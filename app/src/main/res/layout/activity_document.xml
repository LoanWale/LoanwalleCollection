<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.main.view.Activity.DocumentActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/back_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight=".1"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_left_arrow"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".9"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/titleel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="40sp"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center"
                    android:text="Documents"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


            </LinearLayout>


        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        tools:ignore="MissingConstraints" />



    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="3"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/kyc"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            android:layout_height="120dp">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/upload"
                    android:layout_width="40dp"
                    android:backgroundTint="@color/blacklight"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotomedium"
                    android:text="         KYC \n Address Proof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>





        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/currentAdd_text"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:layout_height="120dp">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/upload"
                    android:layout_width="40dp"
                    android:backgroundTint="@color/blacklightlow"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotomedium"
                    android:text="Identity\nProof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>





        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/residence"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:layout_height="120dp">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/upload"
                    android:layout_width="40dp"
                    android:backgroundTint="@color/blacklightlow"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotomedium"
                    android:text="Income \n Proof "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>





        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="3"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            android:layout_height="120dp">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/upload"
                    android:layout_width="40dp"
                    android:backgroundTint="@color/blacklight"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotomedium"
                    android:text="         Other \n Address Proof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>





        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/Upload"
            app:cardBackgroundColor="@color/apbackground"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:layout_height="120dp">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/upload"
                    android:layout_width="40dp"
                    android:backgroundTint="@color/white"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/robotomedium"
                    android:text="      Upload\n Documents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>





        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:elevation="5dp"
            android:layout_height="120dp">

            <LinearLayout
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/upload"
                    android:layout_width="40dp"
                    android:backgroundTint="@color/blacklightlow"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotomedium"
                    android:text="Income \n Proof "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>





        </androidx.cardview.widget.CardView>


    </LinearLayout>











</LinearLayout>